        b.status ,
        b.is_science

        FROM rc_student a join teacher_student_rel b on a.student_uuid = b.student_uuid
        <where>
            <if test="teacherId != null and teacherId != ''">
                AND b.teacher_uuid = #{teacherId}
            </if>
        </where>
        order by b.status
