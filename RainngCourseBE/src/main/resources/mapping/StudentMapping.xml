    <select id="getPage" resultType="StudentItemVO">
        SELECT student_id AS 'id', student_number AS 'number', student_name AS 'name',
        graduate_school AS 'className', graduate_project AS 'majorName', student_sex AS 'sex',
        student_uuid AS 'studentUuid',
        student_last_login_time AS 'lastLoginTime'
        FROM rc_student
        <where>
            <if test="majorName != null and majorName != ''">
                AND graduate_project LIKE CONCAT('%',#{majorName},'%')
            </if>
            <if test="className != null and className != ''">
                AND graduate_school LIKE CONCAT('%',#{className},'%')
            </if>
            <if test="name != null and name != ''">
                AND student_name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>

